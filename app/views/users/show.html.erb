<%= turbo_frame_tag "user" do %>
  <p style="color: green"><%= notice %></p>
  <%= render @user %>
  <div>
    <%= link_to "Edit this user", edit_user_path(@user), class:"btn btn-secondary" %> |
    <%= link_to "Back to users", users_path, class:"btn btn-info" %>
    <%= button_to "Destroy this user", @user, method: :delete, class:"btn btn-danger" %>
  </div>
<% end %>
